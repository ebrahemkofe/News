<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Fragments.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_accidents"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_210sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        />




    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_sports"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_210sdp"
        android:layout_below="@+id/viewpager_accidents"
        android:layout_marginBottom="@dimen/_5sdp"
        />





    <ListView
        android:id="@+id/homeListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:visibility="gone"
        android:layout_below="@+id/viewpager_sports"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_Investigations"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_210sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_below="@+id/homeListview"
            />




        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_fourth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_210sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_below="@id/viewpager_Investigations"
            />




        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_fifth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_210sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_below="@id/viewpager_fourth"
            />




        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_sixith"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_210sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_below="@id/viewpager_fifth"
            />




        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_seventh"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_210sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_below="@id/viewpager_sixith"
            />



    </RelativeLayout>
</ScrollView>