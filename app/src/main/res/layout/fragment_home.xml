<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Fragments.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_accidents"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginBottom="10dp"
        />

        <LinearLayout
            android:id="@+id/more_in_linearlayout_accidents"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:orientation="vertical"
            android:background="#66161515"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_10sdp"
            >


            <ImageView
                android:id="@+id/save_in_viewpager_accidents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/save"
                />
        </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_sports"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_below="@+id/viewpager_accidents"
        android:layout_marginBottom="10dp"
        />


            <LinearLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:background="#66161515"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_below="@id/viewpager_accidents"
                android:layout_margin="@dimen/_10sdp"
                >


                <ImageView
                    android:id="@+id/save_in_viewpager_sports"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/save"
                    />
            </LinearLayout>


    <ListView
        android:id="@+id/homeListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/viewpager_sports"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_Investigations"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:layout_below="@+id/homeListview"
            />


        <LinearLayout
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@id/homeListview"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:background="#66161515"
            android:layout_margin="@dimen/_10sdp"
            >



            <ImageView
                android:id="@+id/save_in_viewpager_Investigations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/save"
                />
        </LinearLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_fourth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@id/viewpager_Investigations"
            />

        <LinearLayout
            android:id="@+id/more_in_linearlayout_fourth"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:orientation="vertical"
            android:background="#66161515"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@id/viewpager_Investigations"
            android:layout_margin="@dimen/_10sdp"
            >


            <ImageView
                android:id="@+id/save_in_viewpager_fourth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/save"
                />


        </LinearLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_fifth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@id/viewpager_fourth"
            />
        <LinearLayout
            android:id="@+id/more_in_linearlayout_fifth"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:orientation="vertical"
            android:background="#66161515"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@id/viewpager_fourth"
            android:layout_margin="@dimen/_10sdp"
            >


            <ImageView
                android:id="@+id/save_in_viewpager_fifth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/save"
                />

        </LinearLayout>



        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_sixith"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@id/viewpager_fifth"
            />

        <LinearLayout
            android:id="@+id/more_in_linearlayout_sixith"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:background="#66161515"
            android:gravity="center"
            android:layout_below="@id/viewpager_fifth"
            android:layout_margin="@dimen/_10sdp"
            >


            <ImageView
                android:id="@+id/save_in_viewpager_sixith"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/save"
                />

        </LinearLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_seventh"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@id/viewpager_sixith"
            />

        <LinearLayout
            android:id="@+id/more_in_linearlayout_seventh"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:orientation="vertical"
            android:background="#66161515"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@id/viewpager_sixith"
            android:layout_margin="@dimen/_10sdp"
            >


            <ImageView
                android:id="@+id/save_in_viewpager_seventh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/save"
                />

        </LinearLayout>


    </RelativeLayout>
</ScrollView>