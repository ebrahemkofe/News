<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activitys.Rejester">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="اسم المستخدم "

            android:backgroundTint="@color/textColorOfLogin"
            />
        <EditText
            android:id="@+id/email"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="البريد الالكتروني "

            android:backgroundTint="@color/textColorOfLogin"
            />
        <EditText
            android:id="@+id/password"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="كلمه المرور  "

            android:backgroundTint="@color/textColorOfLogin"
            />
        <EditText
            android:id="@+id/repassword"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  تاكيد كلمه المرور"

            android:backgroundTint="@color/textColorOfLogin"
            />

    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
     android:onClick="rejest"
        android:layout_centerHorizontal="true"
        android:background="@drawable/back_ground_of_login_btn"
        android:layout_width="@dimen/_200sdp"
        android:textColor="@color/white"
        android:text="انشاء حساب"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:layout_height="@dimen/_50sdp" />
</RelativeLayout>






</LinearLayout>