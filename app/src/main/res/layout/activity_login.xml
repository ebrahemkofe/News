<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:weightSum="16"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/fristText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/calibri"
            android:text="مرحبا بكم "
            android:textColor="@color/Blue"
            android:textSize="@dimen/_13sdp" />
        <TextView
            android:layout_below="@+id/fristText"
            android:layout_centerInParent="true"
            android:textColor="@color/textColorOfLogin"
            android:textSize="@dimen/_11sdp"
            android:text="تسجيل الدخول للمتابعه"
            android:fontFamily="@font/calibri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/textColorOfLogin"
            android:fontFamily="@string/bottom_sheet_behavior"

            android:text="البريد الالكتروني"

            />
        <EditText
            android:id="@+id/editTextEmailForLogin"
            android:backgroundTint="@color/Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/textColorOfLogin"
            android:text="كلمه المرور "

            />
        <EditText
            android:id="@+id/editTextPassword"
            android:backgroundTint="@color/Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        >

        <Button
            android:onClick="login"
            android:id="@+id/login_btn"
            android:layout_centerHorizontal="true"
            android:background="@drawable/back_ground_of_login_btn"
            android:layout_width="@dimen/_200sdp"
            android:textColor="@color/white"
            android:text="تسجيل الدخول"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:fontFamily="@font/calibri"
            android:layout_height="@dimen/_40sdp" />
        <LinearLayout
            android:id="@+id/linear"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/login_with_faceBook"
                android:background="@drawable/back_ground_of_face_google_login"
                android:layout_width="@dimen/_90sdp"
                android:textColor="@color/black"
                android:text="Facebook"
                android:drawableLeft="@drawable/face_icon"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/calibri"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_height="@dimen/_42sdp" />
            <Button
                android:id="@+id/login_with_google"
                android:textColor="@color/black"
                android:text="Google"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/back_ground_of_face_google_login"
                android:textSize="@dimen/_9sdp"
                android:drawableLeft="@drawable/google_icon"
                android:textAllCaps="false"
                android:layout_width="@dimen/_90sdp"
                android:fontFamily="@font/calibri"
                android:layout_height="@dimen/_42sdp" />


        </LinearLayout>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="@dimen/_5sdp"
            android:onClick="signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/textColorOfLogin"
            android:text="انشاء  حساب جديد"
            android:fontFamily="@font/calibri"

            />

    </RelativeLayout>


</LinearLayout>