<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activitys.MainActivity">

    <FrameLayout
        android:id="@+id/FragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <LinearLayout

        android:id="@+id/Home_BottomNavi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/favourite_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="favourite"
            android:orientation="vertical"

            >

            <ImageView
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:id="@+id/favert_icon_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_filled"
                android:onClick="favourite"

                />

            <TextView
                android:id="@+id/favert_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorite"
                android:textSize="14dp"

                />


        </LinearLayout>




        <LinearLayout
            android:id="@+id/account_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical"

            >


            <ImageView

                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:id="@+id/account_icon_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_filled"
                android:onClick="profile"

                />

            <TextView
                android:id="@+id/account_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="14dp"

                />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/home_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="home"
            android:orientation="vertical">

            <ImageView
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:id="@+id/home_icon_id"
                android:src="@drawable/ic_home_unfilled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <TextView
                android:id="@+id/home_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="14dp"

                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
