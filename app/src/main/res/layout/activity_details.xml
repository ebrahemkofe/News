<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_25sdp"
    tools:context=".Activitys.Details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <ImageView
        android:id="@+id/image_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:src="@drawable/tramp"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/_5sdp"

        />
    <TextView
        android:id="@+id/title_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:gravity="right"
        android:text="hellohellohellohellohellohellohelloh"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/dis_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="right"
        android:text=" ellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohelloh"
        android:textColor="#3F51B5"
        android:textSize="@dimen/_10sdp" />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/com_facebook_blue"
                android:gravity="center"
                android:orientation="vertical"
                >


                <ImageView
                    android:id="@+id/save_in_details"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:src="@drawable/bookmark"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>


        <TextView
            android:id="@+id/more_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_margin="@dimen/_5sdp"
            android:text=" ellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohellohelloh"
            android:textColor="#3F51B5"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>
</ScrollView>