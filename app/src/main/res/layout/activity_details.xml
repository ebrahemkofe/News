<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_2sdp"
    tools:context=".Activitys.Details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <ImageView
        android:id="@+id/image_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:scaleType="fitXY"
        android:src="@drawable/tramp"
        android:layout_alignParentTop="true"

        />
        <ImageView
            android:id="@+id/more_det"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/ic_more_horiz_black_24dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:background="#FF5722"
            android:layout_below="@id/image_details"
            android:layout_height="2dp" />

        <LinearLayout
            android:id="@+id/more_in_det"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_below="@id/viewpager_accidents"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:background="#66161515"
            android:orientation="vertical"
            android:padding="@dimen/_4sdp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/save_in_details"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/save" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/white"
                android:fontFamily="@font/calibri"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#59FFFFFF"
            android:layout_below="@id/image_details"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            >

            <TextView
                android:id="@+id/subject_details"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#A40328BF"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_5sdp"
                android:text="أخبار"
                android:fontFamily="@font/calibri_bold"
                android:textColor="#000000"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/title_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:fontFamily="@font/calibri"
                android:gravity="right"
                android:textColor="@color/Blue"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/dis_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="right"
                android:textColor="@color/Blue"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/more_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:fontFamily="@font/calibri"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/Blue"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>