<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_2sdp"
    tools:context=".Activitys.Details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <ImageView
        android:id="@+id/image_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/_5sdp"

        />
        <ImageView
            android:id="@+id/more_det"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/ic_more_horiz_black_24dp"
            />
        <LinearLayout
            android:id="@+id/more_in_det"
            android:layout_below="@id/viewpager_accidents"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:padding="@dimen/_2sdp"
            android:orientation="vertical"
            android:background="#66161515"
            android:layout_margin="@dimen/_40sdp"
            >

            <ImageView
                android:id="@+id/save_in_details"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/save"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Save"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                />


        </LinearLayout>
    <TextView
        android:id="@+id/title_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="right"
        android:layout_below="@id/image_details"
        android:textColor="@color/Blue"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/dis_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_details"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="right"
        android:textColor="@color/Blue"
        android:textSize="@dimen/_13sdp" />


        <TextView
            android:id="@+id/more_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@id/dis_details"
            android:layout_margin="@dimen/_5sdp"
            android:textColor="@color/Blue"
            android:textSize="@dimen/_13sdp" />

    </RelativeLayout>
</ScrollView>